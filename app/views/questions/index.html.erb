<%= javascript_include_tag 'disable_buttons_question' %>
<style>

html, body{height:100%; margin:0;padding:0}


.yes-button{
  margin-right: 2%;

}
.container-main{
  margin-top: 5%;
}

.choice-row{
  margin-top: 5px;
}

.choice{
  margin-top: 5px;
  font-size: 50px
}

#question{
  font-size: 100px;
}

.btn-home{
  margin-top: 7%;
}
</style>



<% begin %>

  <div class="container text-center container-main vertical-center">
    <h1 id="question" class=" col col-sm-12 col-xs-12 col-lg-12 col-md-12"><%= Rails.application.config.question_array[0].title %></h1>

    <div class="row choice-row">
      <div class="col col-sm-12 col-xs-12 col-lg-12 col-md-12">
    <%= link_to Rails.application.config.question_array[0].option1, question_yes_path(0), :class => "btn btn-lg btn-primary yes-button choice", :id => 'yes' %>
    <%= link_to Rails.application.config.question_array[0].option2, question_no_path(0), :class => "btn btn-lg btn-primary no-button choice", :id => 'no' %>
</div>
    </div>
  <% rescue => error%>
    <% puts error %>
    <% puts "^ ERROR" %>
  <% end %>
</div>


<div class="container-fluid text-center">
  <%= link_to "Home", root_path, :class => 'btn btn-md btn-warning btn-home' %>
</div>
